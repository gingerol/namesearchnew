# Application
DEBUG=True
ENV=development
SECRET_KEY=change-this-in-production
ALGORITHM=HS256

# Token settings
ACCESS_TOKEN_EXPIRE_MINUTES=15  # 15 minutes
REFRESH_TOKEN_EXPIRE_DAYS=7  # 7 days
REFRESH_TOKEN_LEEWAY=60  # 1 minute leeway for clock skew
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24  # 24 hours
RESET_PASSWORD_TOKEN_EXPIRE_MINUTES=60  # 1 hour

# First superuser (for initial setup)
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=ChangeMe123!

# Database
DATABASE_URI=postgresql+psycopg2://postgres:postgres@localhost:5432/namesearch
# For Docker:
# DATABASE_URI=postgresql+psycopg2://postgres:postgres@db:5432/namesearch

# Redis
REDIS_URL=redis://localhost:6379/0
# For Docker:
# REDIS_URL=redis://redis:6379/0

# CORS (list of allowed origins)
# For development:
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5000"]
# For production, specify domains:
# BACKEND_CORS_ORIGINS=["https://app.namesearch.io"]

# Security headers
SECURE_HEADERS=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=!DEBUG  # True in production
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=lax

# Rate limiting
RATE_LIMIT=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Email (for verification, password reset, etc.)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.example.com
SMTP_USER=user@example.com
SMTP_PASSWORD=your-smtp-password
EMAILS_FROM_EMAIL=no-reply@namesearch.io
EMAILS_FROM_NAME="Namesearch.io"
# Set to True if SMTP is properly configured
EMAILS_ENABLED=False

# Frontend URL (for password reset links, etc.)
FRONTEND_URL=http://localhost:3000

# Redis (for rate limiting, caching, etc.)
REDIS_URL=redis://localhost:6379/0
# For Docker:
# REDIS_URL=redis://redis:6379/0

# Security
SECURITY_PASSWORD_SALT=change-this-in-production
# Generate a new salt with: python -c "import secrets; print(secrets.token_hex(16))"

# Project information
PROJECT_NAME="Namesearch.io"
API_V1_STR=/api/v1

# API Keys (for future use with external services)
# WHOIS_API_KEY=your-whois-api-key
# VIRUSTOTAL_API_KEY=your-virustotal-api-key
# GOOGLE_SAFE_BROWSING_API_KEY=your-google-safe-browsing-api-key
